{
  "name": "spawnkit",
  "version": "2.0.0",
  "description": "Your AI executive team, on your desktop. Manage agents in a beautiful virtual office.",
  "main": "main.js",
  "author": "SpawnKit Team <hello@spawnkit.ai>",
  "license": "MIT",
  "homepage": "https://spawnkit.ai",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "bash prebuild.sh && electron-builder --mac",
    "build:win": "bash prebuild.sh && electron-builder --win",
    "build:linux": "bash prebuild.sh && electron-builder --linux",
    "prebuild": "bash prebuild.sh"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "ai.spawnkit.app",
    "productName": "SpawnKit",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "data-provider.js",
      "settings.html",
      "agent-builder.html",
      "renderer/**",
      "assets/**",
      "office-executive/**",
      "office-gameboy/**",
      "office-gameboy-color/**",
      "office-sims/**",
      "office-simcity/**",
      "src/**",
      "lib/**",
      "sprites/**",
      "dashboard.html"
    ],
    "extraResources": [],
    "asar": true,
    "dmg": {
      "title": "SpawnKit ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "allowToChangeInstallationDirectory": false
    }
  }
}
